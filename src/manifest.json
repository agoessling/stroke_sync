{
  "name": "Stroke Sync",
  "description": "Synchronize scorecards between applications.",
  "version": "0.1.0",
  "manifest_version": 2,
  "default_locale": "en",
  "browser_action": {
    "default_popup": "popup.html",
    "default_title": "Stroke Sync"
  },
  "background": {
    "scripts": [
      "js/background.js"
    ],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": ["*://connect.garmin.com/*"],
      "js": ["js/garmin.js"]
    }
  ],
  "permissions": ["tabs"]
}
